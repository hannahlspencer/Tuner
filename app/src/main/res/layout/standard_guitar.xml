<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Low E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lowe"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.987"/>
    <Button
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/lowe" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.993"/>
    <Button
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/a" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.987"/>
    <Button
            android:text="G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/g" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/d" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/g" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/e" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/b" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.501"/>

</androidx.constraintlayout.widget.ConstraintLayout>